<?xml version="1.0"?>

<launch>
  <arg name="joy_dev" default="/dev/input/js0" />
  <arg name="cf_list" default="['cf1']" />

  <!-- Launch server -->
  <include file="$(find crazyflie_driver)/launch/crazyflie_server.launch">
  </include>

  <!-- Initiate joystick -->
  <node name="joy" pkg="joy" type="joy_node" output="screen" >
    <param name="dev" value="$(arg joy_dev)" />
  </node>

  <!-- Map controller buttons to services -->
  <node name="crazyflie_joystick_controller" pkg="crazyflie_charles" type="joy_controller.py" output="screen">
    <param name="use_crazyflie_controller" value="True" />
    <param name="joy_topic" value="/joy" />
  </node>

  <!-- Launch swarm manager-->
  <node name="swarmManager" pkg="crazyflie_charles" type="swarmManager.py" output="screen">
    <rosparam param="cf_list" subst_value="True">$(arg cf_list) </rosparam>
  </node>
 

  <!-- Rviz markers -->
  <node name="rviz_markers" pkg="crazyflie_charles" type="rviz_markers.py" output="screen" >
  </node>

</launch>

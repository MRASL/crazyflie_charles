<?xml version="1.0"?>

<launch>  
  <!-- Crazyflie 1 args -->
  <arg name="uri1" default="radio://0/105/2M/0xE7E7E7E701" />
  <arg name="frame1" default="crazyflie1/crazyflie1" />

  <!-- Launch server -->
  <include file="$(find crazyflie_driver)/launch/crazyflie_server.launch">
  </include>

  <!-- Create crazyflie -->
  <group ns="crazyflie1">

    <!-- Add it to the server -->
    <include file="$(find crazyflie_driver)/launch/crazyflie_add.launch">
      <arg name="uri" value="$(arg uri1)" />
      <arg name="tf_prefix" value="crazyflie1" />
      <arg name="enable_logging" value="True" />
    </include>

    <!-- Position frame -->
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame1) /crazyflie1/base_link 100" />
  
    <node name="crazyflie_broadcaster" pkg="crazyflie_charles" type="crazyflie_tf.py" output="screen">
      <param name="cf_name" value="crazyflie1" />
      <param name="frame" value="$(arg frame1)" />
    </node>

  </group>

  <!-- run rviz -->
  <param name="robot_description" command="$(find xacro)/xacro.py $(find crazyflie_description)/urdf/crazyflie.urdf.xacro" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find crazyflie_charles)/launch/crazyflie_pos.rviz" required="true" />

</launch>

<?xml version="1.0"?>
<launch>
  <arg name="joy_dev" default="/dev/input/js0" />
  
  <!-- Crazyflie 1 args -->
  <arg name="uri" default="radio://0/105/2M/0xE7E7E7E701" />
  <arg name="frame" default="crazyflie/crazyflie" />
  
  <!-- Goal -->
  <arg name="x" default="1.7" />
  <arg name="y" default="-1.1" />
  <arg name="z" default="1" />

  <!-- Launch server -->
  <include file="$(find crazyflie_driver)/launch/crazyflie_server.launch">
  </include>

  <!-- Create crazyflie -->
  <group ns="crazyflie">

    <!-- Add it to the server -->
    <include file="$(find crazyflie_driver)/launch/crazyflie_add.launch">
      <arg name="uri" value="$(arg uri)" />
      <arg name="tf_prefix" value="crazyflie" />

      <arg name="enable_logging" value="True" />
      <arg name="enable_logging_imu" default="True" />
      <arg name="enable_logging_temperature" default="True" />
      <arg name="enable_logging_magnetic_field" default="False" />
      <arg name="enable_logging_pressure" default="False" />
      <arg name="enable_logging_battery" default="True" />
      <arg name="enable_logging_pose" default="True" />
      <arg name="enable_logging_packets" default="True" />
    </include>

    <!-- Initiate joystick -->
    <node name="joy" pkg="joy" type="joy_node" output="screen">
      <param name="dev" value="$(arg joy_dev)" />
    </node>

    <!-- Map controller buttons to services -->
    <node name="joystick_controller" pkg="crazyflie_charles" type="controller.py" output="screen">
      <param name="use_crazyflie_controller" value="True" />
    </node>

    <!-- crazyflie automatic controller -->
    <include file="$(find crazyflie_controller)/launch/crazyflie2.launch">
      <arg name="frame" value="$(arg frame)" />
    </include>

    <!-- Publish current goal -->
    <node name="pose" pkg="crazyflie_demo" type="publish_pose.py" output="screen">
      <param name="name" value="goal" />
      <param name="rate" value="30" />
      <param name="x" value="$(arg x)" />
      <param name="y" value="$(arg y)" />
      <param name="z" value="$(arg z)" />
    </node>

    <!-- Position frame -->
    <node pkg="tf" type="static_transform_publisher" name="baselink_broadcaster" args="0 0 0 0 0 0 1 $(arg frame) /crazyflie/base_link 100" />
  
    <node name="crazyflie_broadcaster" pkg="crazyflie_charles" type="crazyflie_tf.py" output="screen">
      <param name="cf_name" value="crazyflie" />
      <param name="frame" value="$(arg frame)" />
    </node>
    
  </group>

  <!-- run rviz -->
  <param name="robot_description" command="$(find xacro)/xacro.py $(find crazyflie_description)/urdf/crazyflie.urdf.xacro" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find crazyflie_charles)/launch/crazyflie_pos.rviz" required="true" />

</launch>
